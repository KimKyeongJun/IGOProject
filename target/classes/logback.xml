<configuration>
	<appender name="STDOUT"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>â–¶ %d{HH:mm:ss.SSS} %-5level %logger{0}.%method:%line -
				%msg%n</pattern>
		</encoder>
	</appender>


	
<appender name="search"
	class="ch.qos.logback.core.rolling.RollingFileAppender">
	<file>D:/logs/search.log</file>
	<rollingPolicy
		class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
		<!-- daily rollover -->
		<fileNamePattern>D:/logs/search_%d{yyyy-MM-dd HH}.log</fileNamePattern>
	</rollingPolicy>
	<encoder>
		<pattern>%d{yyyy-MM-dd HH:mm:ss}%msg%n</pattern>
	</encoder>
</appender>



	
	
<logger level="debug" name="search">
	<appender-ref ref="search" />
</logger>

<root level="debug"> 
	<appender-ref ref="STDOUT"/>
	<!-- <appender-ref ref="STDOUT_File" /> -->
</root>
</configuration>