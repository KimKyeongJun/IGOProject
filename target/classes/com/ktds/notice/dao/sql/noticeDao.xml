	<insert id="insertOneNotice" parameterType="NoticeVO">
		INSERT INTO NOTICE (
  							NOTICE_ID
  							, TITLE
  							, CONTENT
  							, REG_DATE
  							, VIEWCOUNT 							
  							, EMAIL
   						  ) 
		VALUES ( 			
					NEXTVALUE('NO',NOTICE_ID_SEQ.NEXTVAL)					
					, #{title}
					, #{content}
					, SYSDATE				
					, 0
					, #{email}
		)
	</insert>
	
	<update id="updateOneNotice" parameterType="NoticeVO">
		UPDATE NOTICE
		SET		TITLE = #{title}
				, CONTENT = #{content}
				, REG_DATE = SYSDATE
		WHERE	NOTICE_ID = #{noticeId}
	
	</update>
	
	<select id="selectOneNotice" parameterType="string" resultMap="noticeVO">
	SELECT	M.EMAIL M_EMAIL
			, M.NAME
			, M.PASSWORD
			, M.SALT
			, M.LOGIN_FAIL_COUNT
			, M.LAST_LOGIN
			, M.ADMIN_YN
			, Q.NOTICE_ID
			, Q.TITLE
			, Q.CONTENT
			, Q.REG_DATE
			, Q.EMAIL Q_EMAIL
	FROM	MEMBER M
			, NOTICE Q
	WHERE	M.EMAIL = Q.EMAIL
	AND		NOTICE_ID = #{noticeId}
</select>
	
